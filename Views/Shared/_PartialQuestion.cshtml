@model MVCQuiz.Models.QuestionModel
@{
    var questionIndex = ViewData["QuestionIndex"] as int? ?? 0;
}

<div class="question-card">
    <h3>@Model.Title</h3>

    @foreach (var option in Model.Options)
    {
        <div>
            <input type="radio"
                   name="selectedOption[@questionIndex]"
                   value="@option"
                   id="q@(questionIndex)_@(option)">
            <label for="q@(questionIndex)_@(option)">@option</label>
        </div>
    }

    <div hidden>
        <input type="radio"
               name="selectedOption[@questionIndex]"
               value="Not answered"
               id="q@(questionIndex)_Not answered"
               checked>
        <label for="q@(questionIndex)_Not answered">Not answered</label>
    </div>
</div>